/* pages/music/music.wxss */

page{
  width: 100%;
  height: 100%;
}
.music-container {
  flex-flow:column nowrap;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
}

.header {
  height: 7%;
  margin-left: 30rpx;
}
.header .play {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  overflow: hidden; /*防止内容超出容器或者产生自动换行*/
  display: flex;
}

.header text {
  margin-left: 15rpx;
}
.header .num {
  font-size: 25rpx;
  color: gray;
}

.body {
  /* 占满屏 */
  height: 83%; 
}

.song-list {
  width: 100%;
  height: 100%; 
}
.item {
  display: flex;
  margin: 20rpx 0 60rpx 30rpx;
}

.item .song {
  margin-left: 15rpx;
}

.item .more {
  margin-left: auto;
  margin-right: 40rpx;
}
.item .title {
  font-size: 30rpx;
}

.item .subtitle {
  font-size: 25rpx;
  color: gray;
  margin-top: 10rpx;
}

.footer {
  height: 10%; 
  /* background-color: grey; */
  display: flex;
  align-items: center;
}

.footer .circle {
  margin-left: 20rpx;
}
.footer .circle image {
  margin-top: 10rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius:100px;
}

.footer .song {
  margin-left: 20rpx;
}

.footer .title {
  font-size: 30rpx;
}
.footer .subtitle {
  font-size: 25rpx;
  color: gray;
}
.footer .func {
  margin-left: 80rpx;
}

.footer .func icon {
  margin-left: 30rpx;
  color: #0c8ed9;
}